<UserControl x:Class="InitialProject.WPF.View.Owner_Views.OurRecommendationView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:InitialProject.WPF.View.Owner_Views"
             xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
             mc:Ignorable="d" 
             d:DesignHeight="350" d:DesignWidth="710">

    <UserControl.Resources>
        <Style TargetType="Label" BasedOn="{StaticResource defaultLabel}">
            <Setter Property="Foreground" Value="{Binding ContentTextColor}"/>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
            <fa:IconImage Icon="StarHalfAlt" Width="35" Height="35" Foreground="{Binding ContentTextColor}"/>
            <StackPanel Orientation="Vertical" VerticalAlignment="Center" Margin="15 0 0 0">
                <Label Content="{Binding OurRecommendationsText}" 
                       Style="{StaticResource defaultLabel}"
                       FontWeight="Bold" FontSize="28"/>
                <Label Content="{Binding BasedOnMostAndLeastPopularLocationsText}" 
                       Style="{StaticResource defaultLabel}"
                       FontWeight="Light" FontSize="14"/>
            </StackPanel>
        </StackPanel>
        <StackPanel Grid.Row="1" Orientation="Horizontal" VerticalAlignment="Center" Margin="0 0 0 20">
            <Border Grid.Column="1"
                Grid.Row="2"
                Width="340"
                Height="190"
                CornerRadius="0, 25, 25, 25">
                <Grid>
                    <Grid.Background>
                        <ImageBrush ImageSource="{Binding MostPopularLocationImage}">
                            <ImageBrush.RelativeTransform>
                                <ScaleTransform ScaleX="1" ScaleY="1" />
                            </ImageBrush.RelativeTransform>
                        </ImageBrush>
                    </Grid.Background>
                    <Grid.OpacityMask>
                        <VisualBrush>
                            <VisualBrush.Visual>
                                <Border Width="{Binding ActualWidth, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Grid}}"
                            Height="{Binding ActualHeight, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Grid}}"
                            Background="Black"
                            CornerRadius="0, 25, 25, 25" />
                            </VisualBrush.Visual>
                        </VisualBrush>
                    </Grid.OpacityMask>
                    <Rectangle Fill="#80000000" />
                    <Label Content="{Binding MostPopularCountry}"
                       FontSize="28"
                       FontFamily="Ubuntu"
                       FontWeight="Bold"
                       Foreground="White"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"
                       Margin="20, -25, 0, 0"/>
                    <Label Content="{Binding MostPopularCity}"
                       FontSize="28"
                       FontFamily="Ubuntu"
                       FontWeight="Bold"
                       Foreground="White"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"
                       Margin="20, 35, 0, 0"/>
                    <Label Content="{Binding MostPopularLocationText}" 
                       Foreground="#f4f6f8"
                       Margin="20 0 0 0"
                       FontWeight="Light" FontSize="14"/>
                    <Button Style="{StaticResource acceptButton}"
                        Content="{Binding OpenNewAccommodationText}"
                        Width="183"
                        HorizontalAlignment="Left"
                        Command="{Binding OpenNewAccommodation}"
                        Margin="20, 120, 0, 0"
                        Height="40">

                    </Button>
                </Grid>
            </Border>
            <Border Grid.Column="1"
                Grid.Row="2"
                Width="340"
                Height="190"
                Margin="30 0 0 0"
                CornerRadius="0, 25, 25, 25">
                <Grid>
                    <Grid.Background>
                        <ImageBrush ImageSource="{Binding LeastPopularLocationImage}">
                            <ImageBrush.RelativeTransform>
                                <ScaleTransform ScaleX="1" ScaleY="1" />
                            </ImageBrush.RelativeTransform>
                        </ImageBrush>
                    </Grid.Background>
                    <Grid.OpacityMask>
                        <VisualBrush>
                            <VisualBrush.Visual>
                                <Border Width="{Binding ActualWidth, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Grid}}"
                            Height="{Binding ActualHeight, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Grid}}"
                            Background="Black"
                            CornerRadius="0, 25, 25, 25" />
                            </VisualBrush.Visual>
                        </VisualBrush>
                    </Grid.OpacityMask>
                    <Rectangle Fill="#80000000" />
                    <Label Content="{Binding LeastPopularCountry}"
                       FontSize="28"
                       FontFamily="Ubuntu"
                       FontWeight="Bold"
                       Foreground="White"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"
                       Margin="20, -25, 0, 0"/>
                    <Label Content="{Binding LeastPopularCity}"
                       FontSize="28"
                       FontFamily="Ubuntu"
                       FontWeight="Bold"
                       Foreground="White"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"
                       Margin="20, 35, 0, 0"/>
                    <Label Content="{Binding LeastPopularLocationText}" 
                       Foreground="#f4f6f8"
                       Margin="20 0 0 0"
                       FontWeight="Light" FontSize="14"/>
                    <Button Style="{StaticResource denyButtonMobile}"
                        Content="{Binding CloseExistingAccommodationText}"
                        Width="183"
                        Command="{Binding CloseAccommodation}"
                        HorizontalAlignment="Left"
                        Margin="20, 120, 0, 0"
                        Height="40">

                    </Button>
                </Grid>
            </Border>
        </StackPanel>
    </Grid>
</UserControl>
