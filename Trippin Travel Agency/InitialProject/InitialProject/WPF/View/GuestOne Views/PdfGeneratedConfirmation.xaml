<Window x:Class="InitialProject.WPF.View.GuestOne_Views.PdfGeneratedConfirmation"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InitialProject.WPF.View.GuestOne_Views"
        mc:Ignorable="d"
        KeyDown="Func"
        Title="PdfGeneratedConfirmation" Height="365" Width="500" WindowStyle="None">
    <Grid>
        <GroupBox HorizontalAlignment="Center"
            Height="340" 
            Header="PDF is there" 
            VerticalAlignment="Top"
            Width="480" 
            FontFamily="ubuntu" 
            FontSize="36" 
            FontWeight="Bold" 
            Foreground="#FF192A56" 
            BorderThickness="3" 
            BorderBrush="#192a56" 
            Margin="0,8,0,0"/>

        <TextBlock HorizontalAlignment="Center" 
            Height="79" 
            Margin="0,116,0,0"
            FontSize="30"
            TextWrapping="Wrap" 
            Text="PDF is successfuly generated !"
            VerticalAlignment="Top" 
            Width="312"
            FontFamily="ubuntu" 
            FontWeight="Bold" 
            Foreground="#192a56"
            TextAlignment="Center"/>
        <Button Content="OK"
            HorizontalAlignment="Center" 
            Height="38"
            Margin="0,249,0,0" 
            VerticalAlignment="Top"
            Width="136"
            FontFamily="ubuntu" 
            FontSize="14" 
            Background="#FF273C75" 
            Foreground="White" 
            Style="{StaticResource leadButton}"
            FontWeight="Medium"
            />
        
        <TextBlock 
            HorizontalAlignment="Center"
            Height="20" 
            Margin="0,297,0,0"
            TextWrapping="Wrap" 
            Text="Press ENTER" 
            VerticalAlignment="Top" 
            Width="108"
            Foreground="#718093"
            FontFamily="Ubuntu" 
            FontSize="17" 
            FontWeight="Medium"/>

    </Grid>
</Window>
