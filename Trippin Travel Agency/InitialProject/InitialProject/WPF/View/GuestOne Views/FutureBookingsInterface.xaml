<Window x:Class="InitialProject.WPF.View.GuestOne_Views.FutureBookingsInterface"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InitialProject.WPF.View.GuestOne_Views"
        mc:Ignorable="d"
        Title="FutureBookingsInterface" Height="800" Width="1500" >
    <Window.InputBindings>
        <KeyBinding Key="Escape" Command="{Binding GoToPreviousWindow}" />
        <KeyBinding Key="R" Command="{Binding GoToDelayment}" />
        <KeyBinding Key="C" Command="{Binding DeleteBooking}" />
        <KeyBinding Key="B" Command="{Binding GoToPastBookings}" />
    </Window.InputBindings>
    <Grid>
        <GroupBox HorizontalAlignment="Center"
                  Height="432"
                  Header="My upcoming bookings"
                  Margin="0,141,0,0" 
                  VerticalAlignment="Top" 
                  Width="1032"
                  FontFamily="ubuntu" 
                  FontSize="36"
                  FontWeight="Medium" 
                  Foreground="#FF192A56" 
                  BorderThickness="3" 
                  BorderBrush="#192a56"/>

        <DataGrid HorizontalAlignment="Center" 
                  Height="246"
                  Margin="0,201,0,0" 
                  VerticalAlignment="Top"
                  Width="855"
                  x:Name ="futureBookingsGrid"
                  FontFamily="ubuntu" 
                  FontSize="28"
                  Foreground="#FF192A56" 
                  BorderBrush="#FF192A56"
                  Background="White" 
                  FontWeight="Medium"
                  TextBlock.TextAlignment="Center" 
                  ItemsSource="{Binding UpcomingBookingsGrid}"
                  SelectedItem="{Binding SelectedBooking}"/>

        <Button Content="Send a delayment request"
                HorizontalAlignment="Left" 
                Height="57"
                Margin="638,481,0,0"
                VerticalAlignment="Top"
                Width="262"
                FontFamily="ubuntu" 
                FontSize="20" 
                Background="#FF273C75"
                Foreground="White" 
                FontWeight="Medium" 
                IsTabStop="False"
                Style="{StaticResource leadButton}"
                Command="{Binding GoToDelayment}"/>

        <Button Content="Cancel booking"
                HorizontalAlignment="Left" 
                Height="57" 
                Margin="1032,481,0,0"
                VerticalAlignment="Top" 
                Width="152" 
                FontFamily="ubuntu" 
                FontSize="20" 
                Background="#FF273C75" 
                Foreground="White" 
                FontWeight="Medium" 
                IsTabStop="False"
                Style="{StaticResource leadButton}"
                Command="{Binding DeleteBooking}" />

        <Button Content="My previous bookings" 
                HorizontalAlignment="Left" 
                Height="57"
                Margin="638,615,0,0" 
                VerticalAlignment="Top"
                Width="262" 
                FontFamily="ubuntu" 
                FontSize="20" 
                Background="#FF273C75"
                Foreground="White" 
                FontWeight="Medium" 
                IsTabStop="False"
                Style="{StaticResource leadButton}"
                Command="{Binding GoToPastBookings}"/>

        <Button Content="Show detailed" 
                HorizontalAlignment="Left"
                Height="57"
                Margin="316,481,0,0" 
                VerticalAlignment="Top" 
                Width="154"
                FontFamily="ubuntu" 
                FontSize="20" 
                Background="#FF273C75" 
                Foreground="White" 
                FontWeight="Medium"
                Style="{StaticResource leadButton}"
                IsTabStop="False"/>

        <GroupBox Header="Navigator"
                  Margin="985,1,26,662"
                  Padding="10" 
                  FontFamily="ubuntu" 
                  FontSize="30"
                  BorderThickness="3" 
                  BorderBrush="#192a56" 
                  FontWeight="medium" >
            <StackPanel>
                <TextBlock Width="478" FontWeight="medium"><Run Text="Press CTRL+N for program map" FontFamily="ubuntu"/></TextBlock>
            </StackPanel>
        </GroupBox>

        <Rectangle HorizontalAlignment="Left" 
                   Height="65" 
                   Margin="0,708,0,0"
                   Fill ="#273c75" 
                   Stroke="Black"
                   VerticalAlignment="Top"
                   Width="1644"/>

        <TextBlock HorizontalAlignment="Left" 
                   Height="72"
                   Margin="609,702,0,0"
                   TextWrapping="Wrap" Text="Trippin' Travel" 
                   VerticalAlignment="Top"
                   Width="325" 
                   Foreground="white" 
                   FontSize="48" 
                   FontWeight="Bold" />

        <GroupBox Header="Help"
                  Margin="35,0,1107,662"
                  Padding="10"
                  FontFamily="ubuntu" 
                  FontSize="30"
                  BorderThickness="3" 
                  BorderBrush="#192a56"
                  FontWeight="medium" >
            <StackPanel>
                <TextBlock Height="39" FontWeight="medium"><Run Text="Press CTRL+H for help"/></TextBlock>
            </StackPanel>
        </GroupBox>

        <Label Content="Here Soon"
               FontSize ="64" 
               HorizontalAlignment="Center" 
               VerticalAlignment="Top" 
               Margin="0,24,0,0"
               FontFamily="ubuntu"
               FontWeight="Bold" 
               Foreground="#192a56"/>

        <Rectangle HorizontalAlignment="Left" 
                   Height="5"
                   Margin="35,120,0,0" 
                   Stroke="#FF192A56" 
                   VerticalAlignment="Top" 
                   Width="1435" 
                   Fill="#192a56"/>

        <TextBlock HorizontalAlignment="Left" 
                   Height="57" 
                   Margin="412,601,0,0" 
                   TextWrapping="Wrap" 
                   Name="warningBlock"  
                   VerticalAlignment="Top" 
                   Width="146"/>
        <TextBlock 
            HorizontalAlignment="Left" 
            Height="27" Margin="35,727,0,0" 
            TextWrapping="Wrap"
            Text="Press ESC to go back" 
            VerticalAlignment="Top" 
            Width="225"
            Foreground="#e1b12c"
            FontFamily="Ubuntu" 
            FontSize="22" 
            FontWeight="Bold"/>

        <TextBlock 
            HorizontalAlignment="Left"
            Height="20" 
            Margin="362,543,0,0"
            TextWrapping="Wrap" 
            Text="Press D" 
            VerticalAlignment="Top" 
            Width="62"
            Foreground="#718093"
            FontFamily="Ubuntu" 
            FontSize="17" 
            FontWeight="Medium"/>

        <TextBlock 
            HorizontalAlignment="Left"
            Height="20" 
            Margin="738,543,0,0"
            TextWrapping="Wrap" 
            Text="Press R" 
            VerticalAlignment="Top" 
            Width="62"
            Foreground="#718093"
            FontFamily="Ubuntu" 
            FontSize="17" 
            FontWeight="Medium"/>

        <TextBlock 
            HorizontalAlignment="Left"
            Height="20" 
            Margin="1083,543,0,0"
            TextWrapping="Wrap" 
            Text="Press C" 
            VerticalAlignment="Top" 
            Width="62"
            Foreground="#718093"
            FontFamily="Ubuntu" 
            FontSize="17" 
            FontWeight="Medium"/>

        <TextBlock 
            HorizontalAlignment="Left"
            Height="20" 
            Margin="738,677,0,0"
            TextWrapping="Wrap" 
            Text="Press B" 
            VerticalAlignment="Top" 
            Width="62"
            Foreground="#718093"
            FontFamily="Ubuntu" 
            FontSize="17" 
            FontWeight="Medium"/>

        <TextBlock 
            HorizontalAlignment="Center" 
            Height="32" 
            Margin="0,578,0,0" 
            TextWrapping="Wrap" 
            VerticalAlignment="Top" 
            Width="780"
            FontFamily="Ubuntu" 
            FontSize="22" 
            FontWeight="Bold" 
            Foreground="#e84118"
            TextAlignment="Center"
            Text="{Binding WarningText}"/>

    </Grid>
</Window>
