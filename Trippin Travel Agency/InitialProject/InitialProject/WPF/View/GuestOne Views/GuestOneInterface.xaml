        <Label Content="Name" 
               HorizontalAlignment="Left" 
               Margin="100,183,0,0" 
               VerticalAlignment="Top"
               Width="79"
               FontFamily="ubuntu" 
               FontSize="24" 
               FontWeight="medium"
               Foreground="#FF192A56"/>

        <Label Content="City" 
               HorizontalAlignment="Left" 
               Margin="566,181,0,0" 
               VerticalAlignment="Top" 
               Width="60" 
               FontFamily="ubuntu" 
               FontSize="24"
               FontWeight="medium" 
               Foreground="#FF192A56"/>

        <Label Content="Country"
               HorizontalAlignment="Left" 
               Margin="313,179,0,0" 
               VerticalAlignment="Top"
               Width="109"
               FontFamily="ubuntu" 
               FontSize="24" 
               FontWeight="medium" 
               Foreground="#FF192A56"/>

        <Label Content="Type" 
               HorizontalAlignment="Left" 
               Margin="808,185,0,0" 
               VerticalAlignment="Top" 
               Width="74" 
               FontFamily="ubuntu" 
               FontSize="24"
               FontWeight="medium" 
               Foreground="#FF192A56"/>

        <Label Content="No.of guests" 
               HorizontalAlignment="Left"
               Margin="1017,184,0,0"
               VerticalAlignment="Top" 
               RenderTransformOrigin="0.498,0.396" 
               Width="165" 
               FontFamily="ubuntu" 
               FontSize="24" 
               FontWeight="medium" 
               Foreground="#FF192A56"/>

        <Label Content="No.of days"
               HorizontalAlignment="Left" 
               Margin="1266,184,0,0"
               VerticalAlignment="Top" 
               RenderTransformOrigin="0.498,0.58" 
               Width="152"
               FontFamily="ubuntu" 
               FontSize="24" 
               FontWeight="medium" 
               Foreground="#FF192A56"/>

        <TextBox HorizontalAlignment="Left"
                 Margin="61,229,0,0"
                 TextWrapping="Wrap" 
                 VerticalAlignment="Top" 
                 Width="150" Height="61" 
                 Name="n0"
                 IsTabStop="false"
                 Text="{Binding InputName,Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                 TextAlignment="Center"
                 FontFamily="Ubuntu" 
                 Grid.RowSpan="2" 
                 FontSize="22" 
                 VerticalContentAlignment="Center"
                  >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TextChanged">
                    <i:InvokeCommandAction Command="{Binding SearchBy}" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </TextBox>

        <TextBox HorizontalAlignment="Left" 
                 Margin="285,232,0,0"
                 TextWrapping="Wrap" 
                 VerticalAlignment="Top" 
                 Width="150"
                 Height="60" 
                 IsTabStop="false"                 
                 RenderTransformOrigin="0.147,0.03" 
                 Name="n1"
                 Text="{Binding InputCountry,Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                 TextAlignment="Center" 
                 FontFamily="ubuntu" 
                 Grid.RowSpan="2"
                 FontSize="22"
                 VerticalContentAlignment="Center"
                 >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TextChanged">
                    <i:InvokeCommandAction Command="{Binding SearchBy}" />
                </i:EventTrigger>
