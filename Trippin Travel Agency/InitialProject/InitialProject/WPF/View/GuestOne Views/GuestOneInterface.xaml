            Width="1153"
            Foreground="#7f8fa6"
            FontFamily="Ubuntu" 
            FontSize="22" 
            FontWeight="Medium"
            TextAlignment="Center" Grid.Row="1"/>

        <TextBlock HorizontalAlignment="Left"
            Height="52" 
            Margin="1162,100,0,0" 
            TextWrapping="Wrap" 
            Text="{Binding HelpExit}"
            VerticalAlignment="Top" 
            Width="312"
            Foreground="#c23616"
            FontFamily="Ubuntu" 
            FontSize="22" 
            FontWeight="Medium"
            TextAlignment="Center" Grid.Row="1"/>

