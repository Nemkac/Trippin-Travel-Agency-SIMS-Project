            VerticalAlignment="Top" 
            Width="135"
            FontFamily="Ubuntu" 
            FontSize="22" 
            FontWeight="Bold" 
            Foreground="#e84118"
            TextAlignment="Center" Grid.Row="1"/>
    </Grid>
</Window>
