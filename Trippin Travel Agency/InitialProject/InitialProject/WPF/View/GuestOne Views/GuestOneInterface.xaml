<Window x:Class="InitialProject.WPF.View.GuestOne_Views.GuestOneInterface"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        xmlns:local="clr-namespace:InitialProject.WPF.View.GuestOne_Views" 
        xmlns:i1="http://schemas.microsoft.com/netfx/2009/xaml/presentation"
        mc:Ignorable="d"
        KeyDown="F"
        Title="GuestOneInterface" Height="800" Width="1500" Background="#f5f6fa">
    <Window.InputBindings>
        <KeyBinding Key="N" Modifiers="Ctrl" Command="{Binding OpenNavigator}" />
        <KeyBinding Key="H" Modifiers="Ctrl" Command="{Binding Help}" />
        <KeyBinding Key="Enter" Command="{Binding CheckDates}" />
    </Window.InputBindings>

    <Grid Margin="10,-1,-10,1">
        <Grid.RowDefinitions>
            <RowDefinition Height="15*"/>
            <RowDefinition Height="34*"/>
        </Grid.RowDefinitions>

        <DataGrid x:Name="dataGrid" 
                  Margin ="35,171,338,102"
                  FontFamily="ubuntu"
                  FontSize="22" 
                  Foreground="#FF192A56" 
                  BorderBrush="#FF192A56"
                  Background="White" 
                  FontWeight="Medium"
                  Grid.Row="1"
                  KeyDown="G"
                  ItemsSource="{Binding AccommodationsGrid}"
                  SelectedItem="{Binding SelectedAccommodation}"
                  ColumnWidth="125"
                  TextBlock.TextAlignment="Center"
                  Style="{DynamicResource DataGridStyle1}"
                  ColumnHeaderStyle="{DynamicResource DataGridColumnHeaderStyle1}"
                  RowStyle="{DynamicResource DataGridRowStyle1}"/>

        <DatePicker HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Name ="d0"
                    SelectedDate="{Binding StartingDate}"
                    Height="31"
                    Width="170"
                    IsTabStop="false" 
                    Margin="1168,173,0,0" 
                    FontFamily="ubuntu"
                    FontSize="18"
                    KeyDown="G"
                    Background="#FF192A56"
                    RenderTransformOrigin="0.5,0.5" 
                    Grid.Row="1" >
            <DatePicker.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform X="0"/>
                </TransformGroup>
            </DatePicker.RenderTransform>
        </DatePicker>

        <DatePicker HorizontalAlignment="Left"
                    VerticalAlignment="Top" 
                    Name ="d1" 
                    SelectedDate="{Binding EndingDate}"
                    Height="31" 
                    Width="170"
                    KeyDown="G"
                    Margin="1166,252,0,0"
                    FontFamily="ubuntu"
                    IsTabStop="false" 
                    FontSize="18"
                    Background="#FF192A56" 
                    Grid.Row="1"/>

        <Label Content="Starting date" 
               HorizontalAlignment="Left" 
               VerticalAlignment="Top" 
               Height="35" 
               Width="145" 
               Margin="1180,140,0,0" 
               FontFamily="Ubuntu"
               FontSize="22"
               Grid.Row="1"
               FontWeight="medium" 
               Foreground="#FF192A56" />

        <Label Content="Ending date" 
               HorizontalAlignment="Left"
               VerticalAlignment="Top"
               Height="37" 
               Width="143"
               Margin="1188,224,0,0"
               FontFamily="Ubuntu" 
               FontSize="22" 
               Grid.Row="1" 
               FontWeight="medium"
               Foreground="#FF192A56"/>

        <Button Content="Check for dates"
                Style="{StaticResource leadButton}"
                HorizontalAlignment="Left" 
                Height="41" 
                VerticalAlignment="Top" 
                Width="174"
                Margin="1169,389,0,0"
                FontFamily="ubuntu" 
                FontSize="20" 
                Background="#FF273C75" 
                Foreground="White"
                IsTabStop="false" 
                Grid.Row="1"
                FontWeight="Medium"
                Command="{Binding CheckDates}"/>

        <TextBox HorizontalAlignment="Left"
                 Height="45" 
                 TextWrapping="Wrap" 
                 Name ="d2" 
                 Text="{Binding DaysToStay,Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                 VerticalAlignment="Top"
                 Width="90"
                 KeyDown="G"
                 Margin="1208,329,0,0" 
                 FontFamily="ubuntu"
                 IsTabStop="false" 
                 FontSize="22"
                 Grid.Row="1" 
                 TextAlignment="Center" 
                 VerticalContentAlignment="Center"/>

        <TextBlock HorizontalAlignment="Left"
                   TextWrapping="Wrap" 
                   Text="Days to stay"
                   VerticalAlignment="Top" 
                   Height="30" 
                   Width="128"
                   Margin="1191,299,0,0" 
                   FontFamily="ubuntu"
                   FontSize="22"
                   Grid.Row="1"
                   FontWeight="medium"
                   Foreground="#FF192A56"/>

        <TextBlock HorizontalAlignment="Left" 
                   Height="52" 
                   TextWrapping="Wrap" 
                   Name="warningText" 
                   VerticalAlignment="Top" 
                   Width="130" 
                   Margin="1514,562,0,0" 
                   FontFamily="ubuntu" 
                   Grid.Row="1"/>

        <GroupBox Height="200" Header="Search by"
                  Width="1419"
                  HorizontalAlignment="Left" 
                  VerticalAlignment="Top"
                  Margin="21,139,0,0" 
                  FontFamily="ubuntu" 
                  FontSize="36"
                  FontWeight="Bold"
                  Foreground="#FF192A56"
                  BorderThickness="3" 
                  BorderBrush="#192a56" 
                  Opacity="1" 
                  RenderTransformOrigin="0,0"
                  Grid.RowSpan="2" 
                  Background="#ebebf5">

            <GroupBox.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform X="0"/>
                </TransformGroup>
            </GroupBox.RenderTransform>
        </GroupBox>

        <Label Content="Welcome!"
