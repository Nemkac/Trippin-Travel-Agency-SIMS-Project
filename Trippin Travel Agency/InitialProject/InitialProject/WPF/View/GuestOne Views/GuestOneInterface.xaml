                <i:EventTrigger EventName="TextChanged">
                    <i:InvokeCommandAction Command="{Binding SearchBy}" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </TextBox>

        <TextBox HorizontalAlignment="Left"
                 Margin="1021,229,0,0"
                 TextWrapping="Wrap"
                 VerticalAlignment="Top"
                 Width="150" 
                 Height="61"
                 Name="n4"
                 IsTabStop="false" 
                 Text="{Binding InputGuests,Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                 TextAlignment="Center"
                 FontFamily="ubuntu" 
                 Grid.RowSpan="2" 
                 FontSize="22" 
                 VerticalContentAlignment="Center"
                                  >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TextChanged">
                    <i:InvokeCommandAction Command="{Binding SearchBy}" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </TextBox>

        <TextBox HorizontalAlignment="Left"
                 Margin="1256,229,0,0"
                 TextWrapping="Wrap" 
                 VerticalAlignment="Top"
                 Width="150" 
                 Height="61"
                 Name="n5"
                 IsTabStop="false" 
                 Text="{Binding InputDays,Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                 TextAlignment="Center"
                 FontFamily="ubuntu"
                 Grid.RowSpan="2"
                 FontSize="22"
                 VerticalContentAlignment="Center" 
                                  >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TextChanged">
                    <i:InvokeCommandAction Command="{Binding SearchBy}" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </TextBox>

        <TextBox HorizontalAlignment="Left" 
                 Margin="521,229,0,0" 
                 TextWrapping="Wrap"
                 VerticalAlignment="Top"
                 Width="150"
                 Height="61"
                 Name="n2"
                 IsTabStop="false" 
                 Text="{Binding InputCity,Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                 TextAlignment="Center" 
                 FontFamily="ubuntu" 
                 Grid.RowSpan="2"
                 FontSize="22"
                 VerticalContentAlignment="Center"
                                  >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="TextChanged">
                    <i:InvokeCommandAction Command="{Binding SearchBy}" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </TextBox>


        <GroupBox Header="Navigator"
                  Margin="985,1,26,130" 
                  Padding="10"
                  FontFamily="ubuntu" 
                  FontSize="30" 
                  BorderThickness="3" 
                  BorderBrush="#192a56" 
                  FontWeight="medium" >

            <StackPanel>
                <TextBlock Width="478" FontWeight="medium"><Run Text="Press CTRL+N for program map" FontFamily="ubuntu"/></TextBlock>
            </StackPanel>

        </GroupBox>
        <GroupBox Header="Help" Margin="29,0,1106,138" Padding="10" FontFamily="ubuntu" FontSize="30" BorderThickness="3" BorderBrush="#192a56" FontWeight="medium" >
            <StackPanel>
                <TextBlock Height="39" FontWeight="medium"><Run Text="Press CTRL+H for help"/></TextBlock>
            </StackPanel>
        </GroupBox>

        <Rectangle HorizontalAlignment="Left" 
                   Height="76" 
                   Margin="-12,468,0,0" 
                   Fill ="#273c75" 
