<Window x:Class="InitialProject.View.OwnerInterface"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InitialProject.View"
        mc:Ignorable="d"
        Title="OwnerInterface" Height="450" Width="850">
    <Grid>
        <Label Content="Welcome owner!" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0"/>
        <Button x:Name="button" Click="RegisterNewAccommodation" Content="Register new accommodation" HorizontalAlignment="Left" Margin="630,10,0,0" VerticalAlignment="Top" Height="39" Width="196"/>
        <DataGrid x:Name="bookingDataGrid" HorizontalAlignment="Left" Height="192" Margin="24,88,0,0" VerticalAlignment="Top" Width="580" d:ItemsSource="{d:SampleData ItemCount=5}">
            <DataGrid.Columns>
                <DataGridTemplateColumn>
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="Rate Guest" Click="RateGuest"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
